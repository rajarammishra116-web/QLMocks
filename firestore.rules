rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Global Deny All (Implicit, but good to be explicit for unmentioned paths) ---
    // match /{document=**} {
    //   allow read, write: if false;
    // }
    // (Defining explicit matches below covers this, but final catch-all is good practice if structure permits. 
    // Standard Firestore behavior denies anything not matched.)

    // --- Helper Functions ---

    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- Collections ---

    // 1. Users Collection
    match /users/{userId} {
      // Read: Owner can read own profile; Admin can read all
      allow read: if isOwner(userId) || isAdmin();
      
      // Create: Only if Auth UID matches Document ID (Self-registration)
      // AND Role is NOT 'admin' (Clients cannot make themselves admins)
      allow create: if isOwner(userId) && 
                       (!request.resource.data.keys().hasAny(['role']) || request.resource.data.role == 'student');

      // Update: Owner can update BUT role is immutable
      // Admin can update everything
      allow update: if (isOwner(userId) && request.resource.data.role == resource.data.role) || isAdmin();
      
      // Delete: Admin only (or false if we want soft-deletes only)
      allow delete: if isAdmin(); // Changed from false to allow admin cleanup
    }
    
    // 2. Questions Collection
    match /questions/{questionId} {
      // Read: Public for authenticated users
      allow read: if isAuthenticated();
      
      // Write: Admin only
      allow create, update, delete: if isAdmin();
    }
    
    // 3. Tests Collection  
    match /tests/{testId} {
      // Read: Public for authenticated users
      allow read: if isAuthenticated();
      
      // Write: Admin only
      allow create, update, delete: if isAdmin();
    }
    
    // 4. Test Attempts Collection
    match /attempts/{attemptId} {
      // Read: Owner or Admin
      allow read: if isAuthenticated() && 
                     (resource.data.studentId == request.auth.uid || isAdmin());
      
      // Create: Student creating their own attempt
      allow create: if isAuthenticated() && 
                       request.resource.data.studentId == request.auth.uid &&
                       // Validate vital fields to prevent spoofing
                       request.resource.data.keys().hasAll(['testId', 'startedAt']);
      
      // Update: Owner can update answers/status/timer BUT strictly NO ownership change
      allow update: if isAuthenticated() && 
                       resource.data.studentId == request.auth.uid && 
                       request.resource.data.studentId == request.auth.uid; // ID immutable
      
      // Delete: Admin only
      allow delete: if isAdmin();
    }
    
    // 5. System/Metadata
    match /metadata/{document=**} {
      allow read: if isAdmin();
      allow write: if false; // Server-side only via Cloud Functions/Admin SDK
    }

    // 6. Explicit Deny All for Unmatched
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
